@model CabinWebsite_Application.Models.CabinOverviewModel
<div class="row">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-8 col-md-7 col-sm-5 col-xs-12" style="padding-left:0px">
                <h1>Cabin Homepage</h1>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-7 col-xs-12">
                <button type="button" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" onclick="location.href='@Url.Action("AddMessage", "Account")'">Add New Story</button>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <h3 style="font-weight:600">Recent News</h3>
            @if (Model.messages.Count() < 1)
            {
                <center><h4>No Recently Stories</h4></center>
            }
            else
            {
                foreach (var item in Model.messages)
                {
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <h4>@item.title</h4>
                            <h5>By @item.userID  |  Added @item.date</h5>
                            <p>@item.body</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>


</div>